generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String?   @unique
  password  String?
  email     String?   @unique
  googleId  String?   @unique
  picture   String?
  bookings  Booking[]
}

model Bike {
  id           Int       @id @default(autoincrement())
  brand        String
  name         String
  pricePerDay  Int
  available    Boolean    @default(true)
  description  String
  image        String
  bikeFront    String
  bikeRear     String
  bikeLeft     String
  bikeRight    String
  city         String
  isPublish    Boolean    @default(true)
  createdAt    DateTime   @default(now())
  bookings     Booking[]
}

model Booking {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
  bike       Bike     @relation(fields: [bikeId], references: [id], onDelete: Cascade)
  bikeId     Int
  name       String
  gender     String
  dob        DateTime
  email      String
  mobile     String
  aadharcardnumber     String
  drivinglicensenumber String
  fromDate   DateTime
  toDate     DateTime
  status     String    @default("upcoming")
  confirmBooking Boolean @default(false)
  createdAt  DateTime @default(now())
}
